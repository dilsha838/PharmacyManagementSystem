@model AdminWebApp.Models.Pharmacy

<h2 class="form-title">Add Pharmacy</h2>

<form asp-action="AddPharmacy" method="post" class="form-container">
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-input" required />
    </div>
    <div class="form-group">
        <label>Address:</label>
        <input asp-for="Address" class="form-input" required />
    </div>
    <div class="form-group">
        <label>Registration ID:</label>
        <input asp-for="PharmacyRegistrationID" class="form-input" required />
    </div>
    <div class="form-group">
        <label>Contact Number:</label>
        <input asp-for="ContactNumber" class="form-input" required />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" type="email" class="form-input" required />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input asp-for="Password" type="password" class="form-input" required />
    </div>
    <button type="submit" class="form-button">Add Pharmacy</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p class="error-message">@ViewBag.ErrorMessage</p>
}

<style>
    .form-container {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

    .form-input {
        width: 100%;
        padding: 10px;
        border: 1px solid;
        border-radius: 5px;
        font-size: 14px;
    }

        .form-input:focus {
            outline: none;
            box-shadow: 0px 0px 5px;
        }

    .form-button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .error-message {
        text-align: center;
        margin-top: 10px;
    }

</style>
