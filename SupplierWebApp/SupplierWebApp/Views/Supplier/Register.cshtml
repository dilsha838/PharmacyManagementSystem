@model SupplierWebApp.Models.SupplierRegistrationModel

<h2>Register Supplier</h2>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<style>
    h2 {
        text-align: center;
    }

    .alert {
        padding: 10px;
        border: 1px solid;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    form {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px;
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 8px;
        border: 1px solid;
        border-radius: 5px;
        font-size: 14px;
    }

        input:focus {
            outline: none;
            box-shadow: 0px 0px 5px;
        }

    button {
        width: 100%;
        padding: 8px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    span {
        font-size: 14px;
    }

</style>

<form  asp-action="Register" method="post">
    <div>
        <label asp-for="CompanyName"></label>
        <input asp-for="CompanyName" />
        <span asp-validation-for="CompanyName"></span>
    </div>
    <div>
        <label asp-for="CompanyRegistrationId"></label>
        <input asp-for="CompanyRegistrationId" />
        <span asp-validation-for="CompanyRegistrationId"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Phone"></label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>
    <div>
        <label asp-for="ProductCategories"></label>
        <input asp-for="ProductCategories" />
        <span asp-validation-for="ProductCategories"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Register</button>
</form>