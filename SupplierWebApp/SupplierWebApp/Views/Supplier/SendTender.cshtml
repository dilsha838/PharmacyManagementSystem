@{
    ViewData["Title"] = "Send Tender Proposal";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<style>
    h2 {
        text-align: center;
    }

    .alert {
        padding: 10px;
        border: 1px solid;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    form {
        max-width: 500px;
        margin: auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid;
        border-radius: 5px;
        font-size: 14px;
    }

        input:focus, textarea:focus {
            outline: none;
            box-shadow: 0px 0px 5px;
        }

    button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    span {
        font-size: 14px;
    }
</style>

<form method="post" asp-action="SendTender">
    <div class="form-group">
        <label for="CompanyRegistrationId">Company Registration ID</label>
        <input type="text" class="form-control" id="CompanyRegistrationId" name="CompanyRegistrationId" required />
    </div>

    <div class="form-group">
        <label for="TenderDetails">Tender Details</label>
        <textarea class="form-control" id="TenderDetails" name="TenderDetails" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Send Tender</button>
</form>
