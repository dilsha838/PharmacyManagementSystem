@model PharmacyWebApp.Models.DrugOrderModel

@{
    ViewData["Title"] = "Buy Drug";
}

<h2>Buy Drug</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

<form asp-action="BuyDrug" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Pharmacyid" />
    <input type="hidden" asp-for="DrugID" />

    <div class="form-group">
        <label>Pharmacy ID:</label>
        <p>@Model.Pharmacyid</p>
    </div>

    <div class="form-group">
        <label>Drug ID:</label>
        <p>@Model.DrugID</p>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Buy" class="btn btn-primary" />
    </div>
</form>


<style>
    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group p {
            margin: 5px 0;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid;
        border-radius: 5px;
        font-size: 14px;
    }

        .form-control:focus {
            outline: none;
            box-shadow: 0px 0px 5px;
        }

    .btn {
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    .text-danger {
        font-size: 14px;
    }

    .alert {
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}